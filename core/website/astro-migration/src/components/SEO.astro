---
export interface Props {
  title: string;
  description: string;
  image?: string;
  type?: 'website' | 'article';
}

const { title, description, image = '/og-image.jpg', type = 'website' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<link rel="canonical" href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.site)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.site)} />

<!-- Additional SEO Meta Tags -->
<meta name="robots" content="index, follow" />
<meta name="author" content="RagaSense Research Team" />
<meta name="keywords" content="raga classification, Indian classical music, AI, YuE, Carnatic, Hindustani, music AI, machine learning" />

<!-- Structured Data -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  "name": "RagaSense",
  "description": "Revolutionary AI platform for Indian classical music classification and generation",
  "applicationCategory": "MusicApplication",
  "operatingSystem": "Web",
  "url": "https://ragasense.ai",
  "offers": {
    "@type": "Offer",
    "price": "0",
    "priceCurrency": "USD"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "ratingCount": "150"
  },
  "creator": {
    "@type": "Organization",
    "name": "RagaSense Research Team"
  },
  "keywords": "raga classification, Indian classical music, AI, YuE, Carnatic, Hindustani"
}
</script>
