# Flask Configuration
FLASK_APP=wsgi.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-secret-key-here

# Database Configuration
# PostgreSQL connection URL format: postgresql://username:password@host:port/dbname
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432
DB_NAME=raga_detector

# Application Settings
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216  # 16MB in bytes

# API Configuration
API_PREFIX=/api/v1

# CORS Configuration (for development)
CORS_ORIGINS=*  # In production, specify your frontend URL(s) like "http://localhost:3000,https://yourdomain.com"

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Optional: External Services
# AUDIO_PROCESSING_SERVICE_URL=http://localhost:8000
# CACHE_REDIS_URL=redis://localhost:6379/0
